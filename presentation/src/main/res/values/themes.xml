<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/kodchasan_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomNavigationView.IsActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BottomNavigationView.IsNotActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Theme.Community.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Community.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Community.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>